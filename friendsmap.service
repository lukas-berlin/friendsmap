[Unit]
Description=Friendsmap Location Server
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/root/friendsmap
ExecStart=/usr/bin/node index.js
Restart=always
RestartSec=10
Environment=NODE_ENV=production
Environment=PORT=3001

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=friendsmap

# Security
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/root/friendsmap

[Install]
WantedBy=multi-user.target
